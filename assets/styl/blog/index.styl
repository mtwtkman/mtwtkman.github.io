div#article-list-wrapper
  height 100%
  position relative

div#article-list
  list-style none
  font-size 15pt
  padding-top 15px
  padding-bottom 90px
  height 100%

span.post-date
  font-size 12pt
  color #848484
  padding-left 5px

div.title > a:hover
  text-decoration none
  color #07467e

div#footer-trans
  position fixed
  width 100%
  bottom 70px
  height 20px
  background linear-gradient(rgba(255, 255, 255, 0), #fff)

div#footer
  position fixed
  height 70px
  width 100%
  bottom 0
  right 0
  text-align center
  background #fff
  img
    border-radius 50%
    width 60px
